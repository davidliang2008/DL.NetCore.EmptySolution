@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>
<p class="text-muted">
    List of products you can manage
</p>
<div class="table-responsive">
    <table id="table-products" class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Category</th>
                <th>Unit Price</th>
                <th>Out of Stock</th>
                <th>Created on</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

@section css {
    <!-- jquery.dataTables styles -->
    <environment include="development">
        <link rel="stylesheet" href="~/css/jquery.dataTables.css" />
    </environment>
    <environment exclude="development">
        <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
    </environment>
}

@section scripts {
    <!-- jquery.dataTables scripts -->
    <environment include="development">
        <script src="~/js/jquery.dataTables.js"></script>
    </environment>
    <environment exclude="development">
        <script src="~/js/jquery.dataTables.min.js"></script>
    </environment>

    <script type="text/javascript">
        $(function () {
            $('#table-products').dataTable({
                serverSide: true,
                ajax: {
                    url: '@Url.Action("getList", "product", new { area = "" })',
                    type: 'POST'
                },
                processing: true,
                order: [1, 'asc'],
                columns: [
                    {
                        data: 'productId'
                    },
                    {
                        data: 'productName'
                    },
                    {
                        data: 'productCategory'
                    },
                    {
                        data: 'unitPrice', render: function (data, type, row) {
                            return row.unitPriceStr;
                        }
                    },
                    {
                        data: 'outOfStock', searchable: false, render: function (data, type, row) {
                            return data ? "Yes" : "";
                        }
                    },
                    {
                        data: 'dateCreated', render: function (data, type, row) {
                            return row.dateCreatedStr;
                        }
                    }
                ]
            }).fnSetFilteringDelay(1000);
        });
    </script>
}